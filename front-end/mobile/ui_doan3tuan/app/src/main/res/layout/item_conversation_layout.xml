<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0b141a"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUserConverstation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImage"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/txtNameUserConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:text="Tên bạn bè"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserConverstation"
        app:layout_constraintStart_toEndOf="@+id/imgUserConverstation"
        app:layout_constraintTop_toTopOf="@+id/imgUserConverstation" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="10dp"
        android:layout_height="10dp"

        android:background="@drawable/bg_circle_green"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserConverstation"
        app:layout_constraintEnd_toEndOf="@+id/imgUserConverstation"
        app:layout_constraintTop_toBottomOf="@+id/imgUserConverstation" />

</androidx.constraintlayout.widget.ConstraintLayout>